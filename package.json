{
	"name": "snakefmt",
	"displayName": "Snakefmt",
	"description": "Use Snakefmt in Visual Studio Code",
	"version": "0.0.1",
	"publisher": "tfehlmann",
	"engines": {
		"vscode": "^1.46.0"
	},
	"dependencies": {
		"diff-match-patch": "1.0.5",
		"fs-extra": "9.0.1",
		"inversify": "5.0.1",
		"md5": "2.2.0",
		"semver": "7.3.2",
		"reflect-metadata": "0.1.13",
		"@types/diff-match-patch": "1.0.32",
		"@types/md5": "2.2.0",
		"@types/semver": "5.5.0",
		"@types/fs-extra": "9.0.1"
	},
	"categories": [
		"Formatters"
	],
	"keywords": [
		"Snakemake"
	],
	"activationEvents": [
        "onLanguage:snakemake"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Snakefmt configuration",
			"properties": {
				"snakefmt.executable": {
					"type": "string",
					"default": "snakefmt",
					"description": "snakefmt executable path"
				},
				"snakefmt.executable.windows": {
					"type": "string",
					"default": "",
					"description": "snakefmt executable path on Windows"
				},
				 "snakefmt.executable.linux": {
					"type": "string",
					"default": "",
					"description": "snakefmt executable path on Linux"
				},
				"snakefmt.executable.osx": {
					"type": "string",
					"default": "",
					"description": "snakefmt executable path on macOS"
				},
				"snakefmt.language.snakemake.enable": {
					"type": "boolean",
					"default": true,
					"description": "enable formatting for Snakemake (requires reloading Visual Studio Code)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tfehlmann/vscode-snakefmt-provider"
	},
	"license": "MIT"
}
